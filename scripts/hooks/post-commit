echo "\nüöî  \033[0;32mRunning Code Sniffer Drupal & DrupalPractice for /web/modules/custom ...\033[0m"
docker-compose exec app ./vendor/bin/phpcs --no-cache

echo "\nüí©  \033[0;32mRunning PHP Mess Detector ...\033[0m"
docker-compose exec app phpmd ./web/modules/custom text ./phpmd.xml --suffixes php,module,inc,install,test,profile,theme,css,info,txt --exclude *Test.php,*vendor/*
docker-compose exec app phpmd ./behat text ./phpmd.xml -suffixes php

echo "\nüõÇ  \033[0;32mRunning PHP Copy/Paste Detector ...\033[0m"
docker-compose exec app phpcpd ./web/modules/custom --suffix .php --suffix .module --suffix .inc --suffix .install --suffix .test --suffix .profile --suffix .theme --suffix .css --suffix .info --suffix .txt --exclude *.md --exclude *.info.yml --exclude tests --exclude vendor/
docker-compose exec app phpcpd ./behat --suffix .php

echo "\nüç´  \033[0;32mRunning PhpDeprecationDetector ...\033[0m"
docker-compose exec app phpdd ./web/modules/custom ./behat --file-extensions php,inc,test --exclude vendor

echo "\nüïµüèª   \033[0;32mRunning PHP-CS-Fixer ...\033[0m"
docker-compose run app ./vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --dry-run --using-cache=no --format=checkstyle

echo "\nüôè  \033[0;32mRunning Psalm ...\033[0m"
docker-compose exec app psalm --config=psalm.xml --no-cache

echo "\nüëª  \033[0;32mRunning PHPStan ...\033[0m"
docker-compose exec app ./vendor/bin/phpstan analyse ./web/modules/custom ./behat --error-format=checkstyle

echo "\nüí¶  \033[0;32mRunning Drupal-Check ...\033[0m"
docker-compose exec app ./vendor/bin/drupal-check -dvvv ./web/modules/custom ./behat --exclude-dir=vendor --no-progress
