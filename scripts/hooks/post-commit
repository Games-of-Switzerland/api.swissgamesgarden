echo "\n🚔  \033[0;32mRunning Code Sniffer Drupal & DrupalPractice for /web/modules/custom ...\033[0m"
./vendor/bin/phpcs --config-set installed_paths `pwd`/vendor/drupal/coder/coder_sniffer
./vendor/bin/phpcs --standard=Drupal --colors --extensions=php,module,inc,install,test,profile,theme,css,info,txt --ignore=*.md,*.info.yml --encoding=utf-8 ./web/modules/custom ./behat
./vendor/bin/phpcs --standard=DrupalPractice --colors --extensions=php,module,inc,install,test,profile,theme,css,info,txt --ignore=*.md,*.info.yml --encoding=utf-8 ./web/modules/custom ./behat

echo "\n💩  \033[0;32mRunning PHP Mess Detector ...\033[0m"
./vendor/bin/phpmd ./web/modules/custom text ./phpmd.xml --suffixes php,module,inc,install,test,profile,theme,css,info,txt
./vendor/bin/phpmd ./behat text ./phpmd.xml --suffixes php

echo "\n🛂  \033[0;32mRunning PHP Copy/Paste Detector ...\033[0m"
./vendor/bin/phpcpd ./web/modules/custom --names=*.php,*.module,*.inc,*.install,*.test,*.profile,*.theme,*.css,*.info,*.txt --names-exclude=*.md,*.info.yml --ansi --exclude=tests
./vendor/bin/phpcpd ./behat --names=*.php --ansi

echo "\n🍫  \033[0;32mRunning PhpCodeFixer ...\033[0m"
./vendor/bin/phpcf --target 7.2 --file-extensions php,module,inc,install,test,profile,theme,info ./web/modules/custom
./vendor/bin/phpcf --target 7.2 --file-extensions php ./behat

echo "\n🕵🏻  \033[0;32mRunning PHP-CS-Fixer ...\033[0m"
./vendor/bin/php-cs-fixer fix --dry-run --format=checkstyle

echo "\n🙏  \033[0;32mRunning Psalm ...\033[0m"
./vendor/bin/psalm

echo "\n👻  \033[0;32mRunning PHPStan ...\033[0m"
./vendor/bin/phpstan analyse ./web/modules/custom ./behat ./web/themes --error-format=checkstyle
