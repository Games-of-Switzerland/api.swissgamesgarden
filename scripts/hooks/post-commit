echo "\nðŸš”  \033[0;32mRunning Code Sniffer Drupal & DrupalPractice for /web/modules/custom ...\033[0m"
./vendor/bin/phpcs --config-set installed_paths `pwd`/vendor/drupal/coder/coder_sniffer
./vendor/bin/phpcs --standard=Drupal,DrupalPractice --colors --encoding=utf-8 -s \
   --extensions=php,module,inc,install,test,profile,theme,info,txt \
   --ignore=*.md,*.info.yml,*.css,./web/modules/custom/uninstall/* \
   ./web/modules/custom

echo "\nðŸ’©  \033[0;32mRunning PHP Mess Detector ...\033[0m"
./vendor/bin/phpmd ./web/modules/custom text ./phpmd.xml --suffixes php,module,inc,install,test,profile,theme,css,info,txt

echo "\nðŸ›‚  \033[0;32mRunning PHP Copy/Paste Detector ...\033[0m"
./vendor/bin/phpcpd ./web/modules/custom --names=*.php,*.module,*.inc,*.install,*.test,*.profile,*.theme,*.css,*.info,*.txt --names-exclude=*.md,*.info.yml --ansi
